<% include ./partials/header.ejs %>

<style>
h1,#outLink{
    text-align: center;
    margin: 1em;  
    
}
#socialLogin .btn{
    margin: 10px;
}
</style>
<h1>Welcome Back </h1>


<% if(errMessage){ %>
    <p class="text-center text-warning"><%=errMessage%></p>
<% } %>
<form class="form" action="/user/login" method="POST"> 
    <input class="form-control" type="text" name = "username" placeholder="Username" required>
    <input class="form-control" type="password" name = "password" placeholder="Password" required>   

    <input class="form-control" type="submit" value="Login">
    </form>
    <div id="outLink">
    <small>Don't have an account? </small><a href="/user/register">Sign Up</a>
    </div>
    <div id="socialLogin" class="d-flex justify-content-center" style="margin:0 auto;">
        <a class="btn btn-danger" href="/auth/google">Login with Google <span><i class="fa fa-google"></i></span></a>
        <a class="btn btn-primary" href="/auth/facebook">Login with Facebook <span><i class="fa fa-facebook"></i></span></a>
    </div>

<% include ./partials/footer.ejs %>